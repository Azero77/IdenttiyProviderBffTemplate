@inherits LayoutComponentBase

<div>
    <AuthorizeView>
        <Authorized>
            <a href="/callApi" class="btn btn-primary">Call Remote API</a>
            <a href="/accesstoken" class="btn btn-primary">Show Token</a>
            <strong>Hello, @context.User.Identity.Name!</strong>
            <a class="btn btn-danger" href=@($"{GlobalConfiguration.BFFUri}{context.User.FindFirst("bff:logout_url")?.Value}")>Log out</a>
        </Authorized>
        <NotAuthorized>
            <a href=@($"{GlobalConfiguration.BFFUri}/bff/login") class="btn btn-primary">Log in</a>
        </NotAuthorized>
        <Authorizing>
            Determining The session state....
        </Authorizing>
    </AuthorizeView>
</div>
<div>
    @Body
</div>

